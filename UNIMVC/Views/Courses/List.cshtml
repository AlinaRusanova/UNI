@using UNI.Persistence.Models

@model IEnumerable<CourseModel>

@{
    ViewData["Title"] = "List of Courses";
}

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 550px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @course.CourseName

                                    <a class="text-white float-end pe-2" asp-action="Delete" asp-route-id="@course.Id"><i class="bi bi-trash "></i></a>
                                    <a class="text-white float-end pe-3" asp-action="Edit" asp-route-id="@course.Id"><i class="bi bi-pencil-square"></i></a>

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@course.UrlCoursLogo" width="100%" height=250 alt="@course.CourseName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@course.CourseDescription</p>
                        </div>
                    </div>
                    <div class="col-md-12 p-2">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end pb-1" asp-controller="Groups" asp-action="List" asp-route-id="@course.Id"><i class="bi bi-eye-fill"></i> Show Groups</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Courses" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

