@using UNI.Persistence.Models

@model CourseModel

@{
    ViewData["Title"] = "Add a new course";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Course</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="CourseLogoPreview" width=300 height=400 />
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlCoursLogo" class="control-label"></label>
                        <input asp-for="UrlCoursLogo" class="form-control" />
                        <span asp-validation-for="UrlCoursLogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseName" class="control-label"></label>
                        <input asp-for="CourseName" class="form-control" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseDescription" class="control-label"></label>
                        <input asp-for="CourseDescription" class="form-control" />
                        <span asp-validation-for="CourseDescription" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="List" >Show All</a>
                    </div>
                </form>



            </div>
        </div>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                var output = document.getElementById('CourseLogoPreview');
                output.src = $("#UrlCoursLogo").val();
            })

            $("#UrlCoursLogo").on("change", function () {
                var output = document.getElementById('CourseLogoPreview');
                output.src = $(this).val();
            })
        </script>
    }
