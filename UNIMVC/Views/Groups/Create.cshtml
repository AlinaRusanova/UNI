@using UNI.Persistence.Models

@model GroupModel

@{
    ViewData["Title"] = "Add a new group";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Group</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="form-group">
                        <label asp-for="GroupName" class="control-label"></label>
                        <input asp-for="GroupName" class="form-control" />
                        <span asp-validation-for="GroupName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Speciality" class="control-label"></label>
                        <input asp-for="Speciality" class="form-control" />
                        <span asp-validation-for="Speciality" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="List">Show All</a>
                    </div>
                </form>

            </div>
        </div>
    </div>


